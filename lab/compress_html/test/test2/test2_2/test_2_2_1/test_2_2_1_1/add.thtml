<?php/*** 基线的添加/修改页面* * @param $project_code 项目的pretty_name* @param $default_title 默认的评论题目* @param $default_body 默认的评论内容* @param $obj_id 默认的id* @param $comment_type 评论类型       like 'project'* @param $project_code 项目的pretty_name* * @package View.Comment* @author kuncai*/?><?php echo $html->css('comment'); ?><div id="dzh_newcomment"><h3><?php echo t('Create New Comment'); ?></h3><?php echo $html->formTag('/'.$project_code.'/comments/add/');?><?php echo $html->hidden('Comment/entry_type', 'project'); ?><div class="textfield"><label><?php echo t('Title') ?>:<span class="vip">*</span></label><br/><?php echo $html->input('Comment/title',array("size"=>70 ,"class"=>'tapd-txt',"value"=>$default_title, "style"=>"width:518px")) ?><?php echo $html->tagErrorMsg('Comment/title', t('Title is required.')); ?></div><div class="textfield"><label><?php echo t('Content') ?>:<span class="vip">*</span></label><br/><?php echo $this->renderElement('richeditor', array('id'=>'Comment/content','emotion_amount'=>74, 'value'=>empty($default_body) ? '' : $default_body))?><?php echo $html->tagErrorMsg('Comment/content', t('Description is required.')) ?></div><div style="padding:6px 0px;"><?php echo $html->submit(t('Publish','/comments'), array('class'=>"tapd-button", "onclick"=>"return check();")) ?>&nbsp;<a onclick="javascript:history.go(-1);return false;"><?php echo t('Cancel') ?></a></div><?php echo $this->renderElement('message_form',array('width'=>'98%','isset_group_on'=>'off'))?><input type="hidden" name="data[comment_type]" value="<? echo isset($comment_type)?$comment_type:'project';?>" /><input type="hidden" name="data[obj_id]" value="<? echo isset($obj_id)?$obj_id:0;?>" /></form></div><script>function check(){if($('#CommentTitle').val().length && GetContent().length ){return true;}else{alert('<?php echo t('Title and content is required')?>');return false;}}</script>
