<table class="g_table" id="batch_storytable<?php if(isset($select_id)) echo $select_id;?>" style="table-layout:fixed"><tr><th width="5%">&nbsp;</th><?php $field_array = array('id' => '10%', 'name' => '55%', 'modified' => '15%', 'status' => '15%');?><?php foreach($field_array as $field => $width):?><th width="<?php echo $width?>"><?php if($field == $order)$field_sort = $sort=='asc'?'desc':'asc';else$field_sort = $sort?><a href="javascript:batch_process_sort_<?php echo $select_id?>('<?php echo $field?>','<?php echo $field_sort?>')"><?php echo t(ucfirst($field))?><?php if($order==$field){if($sort == 'asc')echo '↑';if($sort == 'desc')echo '↓';}?></a></th><?php endforeach;?></tr><?php foreach($stories as $story):$story = $story['Story'];?><tr><td style="overflow:hidden"><?php if(isset($need_checkbox) && $need_checkbox):?><input type="checkbox" name="data[move_id][]" value="<?php echo $story['id']?>" /><?php endif;?></td><td style="overflow:hidden"><?php echo $story['id'];?></td><td style="overflow:hidden"><a target="_blank" href="<?php echo $myHtml->url("/stories/view/".$story['id'])?>" title="<?php echo $story['name']?>"><?php echo $story['name']?></a></td><td style="overflow:hidden" title="<?php $story['modified']?>"><?php echo d($story['modified'])?></td><td style="overflow:hidden"><?php if(isset($all_steps[$story['status']]))echo $all_steps[$story['status']];elseecho t($story['status']);?></td></tr><?php endforeach;?></table><?php if(count($stories) == 0):?><div style="padding:10px;"><?php echo t("No Data","/tapd"); ?></div><?php endif;?><script>function batch_process_sort_<?php echo $select_id?>(field, sort){var time = new Date();var status = $("#<?php echo $select_id; ?>").val();var select_id = "<?php echo $select_id?>";var url = "<?php echo $myHtml->url("/iterations/get_stories_in_batch_process?iteration_id=".$current_iteration_id)?>";if(select_id == "select_status_right")url += "&need_checkbox=false";elseurl += "&need_checkbox=true";$("#" + select_id + "_div").html("<p style='padding:10px'><?php echo t("loading", "/prong")?></p>");$("#" + select_id + "_div").load(url + "&select_id=" + select_id + "&status="+ status +"&order=" + field + "&sort=" + sort + "&time=" + time.getTime());}</script>
